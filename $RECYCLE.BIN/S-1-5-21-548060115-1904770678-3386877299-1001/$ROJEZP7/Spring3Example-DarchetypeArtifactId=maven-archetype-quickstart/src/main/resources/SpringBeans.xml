<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="helloBean" class="com.mkyong.core.HelloWorld">
		<property name="name" value="Mkyong" />
		<property name="persona" ref="persona" />
		<property name="caratteristicheFisiche" ref="caratteristicheFisiche" />	
		
		
	</bean>
	
	<bean id="persona" class="com.mkyong.core.Persona">
		<property name="nome" value="Fabio" />		
		<property name="cognome" value="Assaiante" />
	</bean>
	
	<bean id="caratteristicheFisiche" class="com.mkyong.core.CaratteristicheFisiche">
		<property name="altezza" value="185cm" />		
		<property name="peso" value="74kg" />
		<property name="coloreCapelli" value="Biondo" />
	</bean>
	

</beans>